<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Content</th>
    <th>Publish at</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.subject %></td>
    <td><%= blog.content %></td>
    <td><%= blog.publish_at %></td>
    <td><%= blog.user %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

