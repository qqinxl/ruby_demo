<h1>Blog & Life</h1>
<div class="block" id="block-login">
  <h2>Login</h2>
  <div class="content login">
	<div class="flash">
		<% devise_error_messages!.each do |key, value| %>
			<div class="message error left">
			  <p><%= key %>:<%= value %></p>
			</div>
		<% end %>
	</div>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="group wat-cf">
			<div class="left"><%= f.label :email, :class => "label right" %></div>
			<div class="right"><%= f.text_field :email, :class => "text_field" %></div>
		</div>
		<div class="group wat-cf">
			<div class="left"><%= f.label :password, :class => "label right" %></div>
			<div class="right"><%= f.password_field :password, :class => "text_field" %></div>
		</div>
		<% if devise_mapping.rememberable? -%>
			<div class="group wat-cf">
			  <div class="right">
				<%= f.check_box :remember_me, :class => "checkbox" %>
				<%= f.label :remember_me, :class => "checkbox" %>
			  </div>
			</div>
		<% end -%>
		<div class="group wat-cf">
			<div class="right">
			  <button class="button" type="submit">
				<%= image_tag "web-app-theme/icons/key.png" %>
				Login
			  </button>
			</div>
		</div>
	<% end %>
	<%= render "devise/shared/links" %>
  </div>
</div>