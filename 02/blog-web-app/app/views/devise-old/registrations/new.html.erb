<h1>Blog & Life</h1>
<div class="block" id="block-signup">
    <h2>Sign up</h2>
    <div class="content ">
        <div class="flash">
            <% devise_error_messages!.each do |key, value| %>
                <div class="message error">
                  <p><%= key %>:<%= value %></p>
                </div>
            <% end %>
        </div>
        <div class="form">
                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                     <div class="group">
                        <%= f.label :name, :class => "label" %>
                        <%= f.text_field :name, :class => "text_field" %>
                    </div>
                    <div class="group">
                        <%= f.label :email, :class => "label" %>
                        <%= f.text_field :email, :class => "text_field" %>
                        <span class="description">Ex. test@example.com</span>
                    </div>
                    <div class="group">
                        <%= f.label :password, :class => "label" %>
                        <%= f.password_field :password, :class => "text_field" %>
                        <span class="description">must be at least 6 characters</span>
                    </div>
                    <div class="group">
                        <%= f.label :password_confirmation, "Re-enter Password", :class => "label" %>
                        <%= f.password_field :password_confirmation, :class => "text_field" %>
                    </div>
                    <div class="group navform wat-cf">
                        <button class="button" type="submit">
                            <%= image_tag "web-app-theme/icons/tick.png" %>
                            Sign up
                        </button>
                    </div>
                <% end %>
        </div>
        <%= render "devise/shared/links" %>
    </div>
</div>
